Algoritmo "ex_24"
var
reais,dolar,marco_alemao,libra:real
inicio
escreva ("Digite a quantidade de dinheiro em reais que a pessoa possui: ")
leia (reais)
dolar <- reais / 1.80
marco_alemao <- reais / 2.00
libra <- reais / 3.57
escreval ("O dinheiro da pessoa equivale a ", dolar, " dólares")
escreval (marco_alemao, " marcos")
escreva (libra, " libras.")
fimalgoritmo